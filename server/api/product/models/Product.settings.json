{
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "brand": {
      "model": "brand",
      "via": "products"
    },
    "category": {
      "model": "category",
      "via": "products"
    }
  }
}